<?xml version="1.0"?>
<!-- PHP_CodeSniffer standard for Paddle Landing Page. -->
<!-- See http://pear.php.net/manual/en/package.php.php-codesniffer.annotated-ruleset.php -->
<ruleset name="Paddle-IPE">
    <description>Drupal coding standard</description>

    <rule ref="Drupal">

    </rule>

    <!-- Avoid false positives on intentionally empty CSS files. -->
    <rule ref="Drupal.NamingConventions.ValidClassName">
        <exclude-pattern>*/plugins/display_renderers/*.class.php</exclude-pattern>
    </rule>

    <rule ref="Drupal.NamingConventions.ValidFunctionName">
        <exclude-pattern>*/plugins/display_renderers/*.class.php</exclude-pattern>
    </rule>

    <rule ref="Drupal.Commenting.FunctionComment.ShortFullStop">
        <exclude-pattern>*/plugins/display_renderers/*.class.php</exclude-pattern>
    </rule>

    <rule ref="Drupal.Commenting.FunctionComment.ShortNotCapital">
        <exclude-pattern>*/plugins/display_renderers/*.class.php</exclude-pattern>
    </rule>

</ruleset>
